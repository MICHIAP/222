// Lottery configuration and logic
const lotteryConfigs = {
    "10": { price: 10, slots: 20 },
    "100": { price: 100, slots: 30 },
    "1000": { price: 1000, slots: 50 }
};
let currentLottery = null;
let slotsTaken = [];

function openLottery(type) {
    const config = lotteryConfigs[type];
    currentLottery = type;
    slotsTaken = new Array(config.slots).fill(null);

    document.getElementById('lottery-title').textContent = `${config.price} TON Lottery`;
    renderLotterySlots();

    document.getElementById('lottery-submenu').classList.remove('active-sub-view');
    document.getElementById('lottery-game-view').classList.add('active-sub-view');
}

function renderLotterySlots() {
    const slotsContainer = document.getElementById('lottery-slots');
    slotsContainer.innerHTML = '';
    const config = lotteryConfigs[currentLottery];

    slotsTaken.forEach((owner, index) => {
        const slot = document.createElement('div');
        slot.style.height = '64px';
        slot.style.borderRadius = '8px';
        slot.style.display = 'flex';
        slot.style.alignItems = 'center';
        slot.style.justifyContent = 'center';
        slot.style.background = owner ? '#2b99f3' : '#111';
        slot.style.cursor = owner ? 'default' : 'pointer';

        if (owner) {
            if (owner.avatar) {
                const img = document.createElement('img');
                img.src = owner.avatar;
                img.style.width = '100%';
                img.style.height = '100%';
                img.style.objectFit = 'cover';
                img.style.borderRadius = '8px';
                slot.appendChild(img);
            } else {
                slot.textContent = owner.name || 'üë§';
            }
        } else {
            slot.textContent = index + 1;
            slot.addEventListener('click', () => buySlot(index));
        }

        slotsContainer.appendChild(slot);
    });
}

function buySlot(index) {
    if (slotsTaken[index]) return;
    const player = getTgUser() || { id: 'local_' + Math.random().toString(36).substr(2,6), first_name: 'Player', photo_url: null };
    const playerObj = { id: player.id, name: player.first_name || player.username || 'Player', avatar: player.photo_url || null };

    slotsTaken[index] = playerObj;
    renderLotterySlots();

    // Optionally: here you would call TON payment flow to actually transfer money
    // For now we simulate the purchase locally

    if (slotsTaken.every(x => x)) {
        // small delay to allow UI update
        setTimeout(() => startLottery(), 600);
    }
}

// Lottery roulette animation using avatars
function startLottery() {
    const config = lotteryConfigs[currentLottery];
    let participants = [];
    slotsTaken.forEach(p => { if (p) participants.push(p); });

    // Build long strip (duplicate participants to make rotation)
    const strip = document.getElementById('lottery-roulette-strip');
    strip.innerHTML = '';

    // Create an array with participant entries repeated by their number of slots
    let entries = [];
    slotsTaken.forEach(p => { if (p) entries.push(p); });

    // Duplicate entries to ensure long strip, shuffle
    entries = entries.concat(entries, entries);
    entries = shuffleArray(entries);

    entries.forEach(p => {
        const avatar = document.createElement('div');
        avatar.style.width = '96px';
        avatar.style.height = '96px';
        avatar.style.borderRadius = '50%';
        avatar.style.margin = '0 12px';
        avatar.style.flexShrink = '0';
        avatar.style.overflow = 'hidden';
        avatar.style.border = '3px solid rgba(255,255,255,0.06)';
        avatar.dataset.owner = p.id;

        if (p.avatar) {
            const img = document.createElement('img');
            img.src = p.avatar;
            img.style.width = '100%';
            img.style.height = '100%';
            img.style.objectFit = 'cover';
            avatar.appendChild(img);
        } else {
            avatar.style.display = 'flex'; avatar.style.alignItems = 'center'; avatar.style.justifyContent = 'center';
            avatar.style.fontSize = '36px';
            avatar.textContent = 'üë§';
        }

        strip.appendChild(avatar);
    });

    // Ensure strip is wide enough by cloning its children a bit
    const initialChildren = Array.from(strip.children);
    for (let i = 0; i < 8; i++) {
        const clone = initialChildren[i % initialChildren.length].cloneNode(true);
        strip.appendChild(clone);
    }

    // Animation: move strip from 0 to negative offset, accelerate then decelerate
    let totalWidth = strip.scrollWidth;
    let viewportWidth = document.getElementById('lottery-roulette-container').clientWidth;
    let current = 0;
    let velocity = 40 + Math.random() * 40; // px per frame-ish
    let decelerationStart = 3000 + Math.random() * 1500; // when to start decelerating
    let traveled = 0;
    let rafId = null;

    function step() {
        // move
        current -= velocity;
        traveled += velocity;

        // wrap-around to keep continuous strip feel
        if (Math.abs(current) > totalWidth/2) {
            current = 0;
        }

        strip.style.transform = `translateX(${current}px)`;

        // start slowing down after traveled > decelerationStart
        if (traveled > decelerationStart) {
            velocity *= 0.985; // slow down factor
            if (velocity < 0.6) {
                cancelAnimationFrame(rafId);
                finalizeWinner();
                return;
            }
        }

        rafId = requestAnimationFrame(step);
    }

    rafId = requestAnimationFrame(step);

    function finalizeWinner() {
        // Determine winner by finding element centered at container midline
        const containerRect = document.getElementById('lottery-roulette-container').getBoundingClientRect();
        const centerX = containerRect.left + containerRect.width/2;

        let winnerOwnerId = null;
        for (const el of strip.children) {
            const rect = el.getBoundingClientRect();
            if (rect.left < centerX && rect.right > centerX) {
                winnerOwnerId = el.dataset.owner;
                break;
            }
        }

        let winner = slotsTaken.find(p => p && String(p.id) === String(winnerOwnerId));
        if (!winner) {
            // fallback: pick random participant
            const any = slotsTaken.filter(Boolean);
            winner = any[Math.floor(Math.random()*any.length)];
        }

        const reward = (config.price * slotsTaken.filter(Boolean).length) * 0.9;
        const devShare = (config.price * slotsTaken.filter(Boolean).length) * 0.1;

        document.getElementById('lottery-status').textContent = `üéâ –ü–æ–±–µ–¥–∏—Ç–µ–ª—å: ${winner.name} –ø–æ–ª—É—á–∞–µ—Ç ${reward.toFixed(2)} TON (–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫: ${devShare.toFixed(2)} TON)`;

        // OPTIONAL: here you should trigger payout via TON transaction to winner,
        // and record transaction history. This implementation only simulates UI.
    }
}

function shuffleArray(arr) { return arr.sort(() => Math.random() - 0.5); }

// Wire lottery open buttons
document.getElementById('open-lottery-10').addEventListener('click', () => openLottery('10'));
document.getElementById('open-lottery-100').addEventListener('click', () => openLottery('100'));
document.getElementById('open-lottery-1000').addEventListener('click', () => openLottery('1000'));
document.querySelectorAll('.back-to-lottery').forEach(btn => btn.addEventListener('click', () => {
    document.getElementById('lottery-game-view').classList.remove('active-sub-view');
    document.getElementById('lottery-submenu').classList.add('active-sub-view');
}));

function showMessage(text) {
    try { if (typeof showNotification === 'function') { showNotification(text); return; } } catch(e) {}
    alert(text);
}



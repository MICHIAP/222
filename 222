    document.getElementById('games-section-title').textContent = '–ò–≥—Ä–æ–≤–æ–π —Ü–µ–Ω—Ç—Ä LUDO';
    window.Telegram?.WebApp?.HapticFeedback?.impactOccurred?.('light');
}

